{
  "name": "Easy Go Monitor Dev",
  "dockerComposeFile": "../docker/compose.yaml",
  "service": "backend",
  "workspaceFolder": "/app",
  "forwardPorts": [3000, 8080, 9080],
  "portsAttributes": {
    "3000": { "label": "Frontend", "onAutoForward": "openPreview" },
    "8080": { "label": "Backend", "onAutoForward": "notify" },
    "9080": { "label": "pgAdmin", "onAutoForward": "notify" }
  },
  "postCreateCommand": "docker compose up --build -d",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}